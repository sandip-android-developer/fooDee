<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorsplacebackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorsplacebackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorControlHighlight">@color/colorsplacebackground</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ColorDrawerTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/bgapp</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/bgapp</item>
        <item name="android:windowSoftInputMode">adjustPan|adjustResize</item>
    </style>

    <style name="PopAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>

    </style>

</resources>
