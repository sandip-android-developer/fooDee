<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

    <include
        android:id="@+id/toolbarFreeMeal"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgNoFood"
            android:layout_gravity="center_vertical"
            android:src="@drawable/nofood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.webmyne.modak.custome.TfTextView
           android:layout_marginTop="@dimen/height_150"
            android:layout_below="@+id/toolbarFreeMeal"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_20"
            android:gravity="center"
            android:text="Sorry\nNo Offers Available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>



</LinearLayout>