<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:id="@+id/llFaq"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">

            <RelativeLayout
                    android:id="@+id/rlFaq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/imgHelp"
                        android:layout_width="@dimen/width_24"
                        android:layout_height="@dimen/height_24"
                        android:layout_marginRight="@dimen/margin_left_20"
                        android:src="@drawable/icon_faq" />

                <com.webmyne.modak.custome.TfTextView
                        android:id="@+id/txtFeqLess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgHelp"
                        android:text="@string/loren_ispat_simple_a_dummy_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />


                <ImageView
                        android:id="@+id/imgOpenFeq"
                        android:layout_width="@dimen/width_24"
                        android:layout_height="@dimen/height_24"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/margin_left_20"
                        android:src="@drawable/ic_icon_open_faq" />

                <View
                        android:id="@+id/viewFeq"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/imgHelp"
                        android:layout_marginTop="@dimen/margin_left_10"
                        android:background="@color/black" />
            </RelativeLayout>

            <com.webmyne.modak.custome.TfTextView
                    android:id="@+id/txtFeqMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewFeq"
                    android:layout_marginTop="@dimen/margin_left_10"
                    android:text="@string/loren_ispat_simple_a_dummy_text_loren_ispat_simple_a_dummy_text_loren_ispat_simple_a_dummy_text"
                    android:textColor="@color/black"
                    android:visibility="gone" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
