<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgapp"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_100"
                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_20"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_50"
                                    android:layout_marginRight="@dimen/margin_right_15"

                                    android:orientation="vertical">

                                    <com.webmyne.modak.custome.TfTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_top_10"
                                        android:text="@string/name"
                                        android:textColor="@color/colorsplacebackground" />

                                    <com.webmyne.modak.custome.TfEditText
                                        android:id="@+id/edtUserFirstName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/black"
                                        android:hint="@string/enter_name"
                                        android:paddingBottom="20dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black" />


                                </LinearLayout>

                                <com.webmyne.modak.custome.TfTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/address_line1"
                                    android:textColor="@color/colorsplacebackground" />

                                <com.webmyne.modak.custome.TfEditText
                                    android:id="@+id/edtUserAddress1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/bgapp"
                                    android:hint="@string/enter_address_line1"
                                    android:singleLine="true"
                                    android:textColor="@color/black" />

                                <com.webmyne.modak.custome.TfTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_top_10"
                                    android:text="@string/city"
                                    android:textColor="@color/colorsplacebackground" />

                                <com.webmyne.modak.custome.TfEditText
                                    android:id="@+id/edtUserCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/black"
                                    android:hint="@string/enter_city"
                                    android:paddingBottom="@dimen/margin_bottom_20"
                                    android:singleLine="true"
                                    android:textColor="@color/black" />

                                <com.webmyne.modak.custome.TfTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_top_10"
                                    android:text="@string/state"
                                    android:textColor="@color/colorsplacebackground" />

                                <com.webmyne.modak.custome.TfEditText
                                    android:id="@+id/edtUserState"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/black"
                                    android:hint="@string/enter_state"
                                    android:paddingBottom="@dimen/margin_bottom_20"
                                    android:singleLine="true"
                                    android:textColor="@color/black" />
                                <com.webmyne.modak.custome.TfTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_top_10"
                                    android:text="@string/country"
                                    android:textColor="@color/colorsplacebackground" />

                                <com.webmyne.modak.custome.TfEditText
                                    android:id="@+id/edtUserCountry"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/black"
                                    android:hint="@string/enter_country"
                                    android:paddingBottom="@dimen/margin_bottom_20"
                                    android:singleLine="true"
                                    android:textColor="@color/black" />

                                <com.webmyne.modak.custome.TfTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_top_10"
                                    android:text="@string/zip_code"
                                    android:textColor="@color/colorsplacebackground" />

                                <com.webmyne.modak.custome.TfEditText
                                    android:id="@+id/edtUserZipCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:backgroundTint="@color/black"
                                    android:hint="@string/enter_zip_code"
                                    android:paddingBottom="@dimen/margin_bottom_20"
                                    android:singleLine="true"
                                    android:textColor="@color/black" />
                                <LinearLayout
                                    android:layout_marginBottom="@dimen/margin_bottom_80"
                                    android:layout_marginTop="@dimen/margin_top_10"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <com.webmyne.modak.custome.TfTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/address_type"
                                    android:textColor="@color/colorsplacebackground" />

                                <CheckBox
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:id="@+id/cbHome"
                                    android:checked="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Home" />

                                <CheckBox
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:id="@+id/cbOffice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Office" />

                                </LinearLayout>
                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imguserEdit"
                            android:layout_width="@dimen/width_120"
                            android:layout_height="@dimen/height_120"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/ic_user_icon" />

                        <com.webmyne.modak.custome.TfTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10"
                            android:gravity="center_horizontal"
                            android:text="Add/Edit Profile"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </RelativeLayout>

            </FrameLayout>

        </ScrollView>

        <com.webmyne.modak.custome.TfTextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/bgapp" />

        <com.webmyne.modak.custome.TfTextView
            android:id="@+id/txtSaveEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/signupbutton"
            android:gravity="center"
            android:paddingTop="@dimen/paddint_top_10"
            android:paddingBottom="@dimen/padding_bottom_10"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorsplacebackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_10">

            <ImageView
                android:id="@+id/imgbackEdit"
                android:layout_width="@dimen/width_24"
                android:layout_height="@dimen/height_24"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_right_5"
                android:layout_marginEnd="@dimen/margin_end_4"
                android:layout_marginRight="@dimen/margin_right_10"
                android:src="@drawable/icon_back_nevi" />

            <com.webmyne.modak.custome.TfTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imgbackEdit"
                android:text="@string/edit_profile"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />

            <com.webmyne.modak.custome.TfTextView
                android:id="@+id/txtXCancelEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/x_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>
