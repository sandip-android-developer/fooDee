<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imgItem_Home"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/imgHomeChefImage"
                        android:layout_width="@dimen/height_60"
                        android:layout_height="@dimen/height_60"
                        android:layout_below="@+id/imgItem_Home"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="-30dp"
                        android:src="@drawable/imgwomen" />

                    <com.webmyne.modak.custome.TfTextView
                        android:id="@+id/txtHomeChefName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgItem_Home"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_toEndOf="@+id/imgHomeChefImage"
                        android:text="@string/txt_chef_name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_14"
                        tools:ignore="NotSibling" />

                    <ImageView
                        android:id="@+id/imgHomeIconDistance"
                        android:layout_width="@dimen/icon_width_16"
                        android:layout_height="@dimen/icon_height_16"
                        android:layout_below="@+id/imgItem_Home"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_toEndOf="@+id/txtHomeChefName"
                        android:src="@drawable/icon_distance" />

                    <com.webmyne.modak.custome.TfTextView
                        android:id="@+id/txtHomeItemDistabace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgItem_Home"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_toEndOf="@+id/imgHomeIconDistance"
                        android:text="@string/txt_item_distance"
                        android:textSize="12sp" />

                    <com.webmyne.modak.custome.TfTextView
                        android:id="@+id/txtHomeItemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgItem_Home"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:includeFontPadding="false"
                        android:text="@string/itrm_price"
                        android:textColor="@color/colorsplacebackground"
                        android:textSize="@dimen/text_size_18" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/margin_20"
                    android:src="@drawable/ic_not_favorite" />
            </FrameLayout>


            <com.webmyne.modak.custome.TfTextView
                android:id="@+id/txtHomeItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:text="@string/txt_item_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_item_name_size_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="horizontal">

                <com.webmyne.modak.custome.TfTextView
                    android:id="@+id/txtHomeItemFamousPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Cuisine:"
                    android:textColor="@color/colorsplacebackground"
                    android:textSize="15sp" />

                <com.webmyne.modak.custome.TfTextView
                    android:id="@+id/txtHomeItemFamousPlaceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtHomeItemFamousPlace"
                    android:text="South Indian"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <com.webmyne.modak.custome.TfTextView
                    android:id="@+id/txtHomeItemQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/imgHomeItemLeftArrow"
                    android:text="Qty"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgHomeItemLeftArrow"
                    android:layout_width="@dimen/widht_20"
                    android:layout_height="@dimen/widht_20"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toLeftOf="@+id/txtHomeNumberOfItem"
                    android:src="@drawable/icon_pre" />

                <com.webmyne.modak.custome.TfTextView
                    android:id="@+id/txtHomeNumberOfItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imgHomeItemRightArrow"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="-2dp"
                    android:layout_toLeftOf="@+id/imgHomeItemRightArrow"
                    android:text="0"
                    android:textColor="@color/colorsplacebackground"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imgHomeItemRightArrow"
                    android:layout_width="@dimen/widht_20"
                    android:layout_height="@dimen/widht_20"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_toLeftOf="@+id/imgItemAdd_Home"
                    android:src="@drawable/icon_next" />

                <ImageView
                    android:id="@+id/imgItemAdd_Home"
                    android:layout_width="@dimen/icon_add_width_33"
                    android:layout_height="@dimen/icon_add_height_32"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_10"
                    android:background="@drawable/homecircle"
                    android:src="@drawable/icon_add" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

