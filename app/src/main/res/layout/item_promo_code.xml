<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_10"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/margin_10"
        app:cardCornerRadius="@dimen/margin_5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.webmyne.modak.custome.TfTextView
                android:layout_margin="@dimen/margin_5"
                android:gravity="center"
                android:id="@+id/txtOffers"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:background="@drawable/dotted_rectangle"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:src="@drawable/ic_user_icon"
                android:textColor="@color/black"
                android:text="Get 50% Off" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.webmyne.modak.custome.TfTextView
                    android:id="@+id/txtOffers_Promo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Grab 50% Off"
                    android:textColor="@color/colorsplacebackground"
                    android:textSize="@dimen/text_size_18" />


                <com.webmyne.modak.custome.TfTextView
                    android:id="@+id/txtPromoDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="New User Offers:Get 50% Off Up To Rs.100 on First 5 Order "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12" />


            </LinearLayout>

            <com.webmyne.modak.custome.TfTextView
                android:id="@+id/txtApplyProme"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtCoupanCode"
                android:layout_weight="0.5"
                android:background="@drawable/viewcardbutton"
                android:backgroundTint="@color/colorlightblack"
                android:gravity="center"
                android:padding="@dimen/padding_4"
                android:text="@string/apply"
                android:textColor="@color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>



       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/lightGray1" />-->

</LinearLayout>
