<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_100"
                android:background="@drawable/signup_top">

        </android.support.v7.widget.Toolbar>

        <com.webmyne.modak.custome.TfTextView
                android:id="@+id/txtSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_50"
                android:layout_below="@+id/toolbar"
                android:background="@color/bgapp"
                android:paddingLeft="@dimen/padding_left_20"
                android:paddingTop="@dimen/padding_top_10"
                android:paddingBottom="@dimen/padding_bottom_10"
                android:text="@string/sign_up"
                android:textColor="@android:color/black"
                android:textSize="@dimen/item_size_18" />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_25"
                        android:background="@android:color/white">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_Top_15"
                            android:layout_marginEnd="@dimen/margin_Top_15"
                            android:orientation="vertical">


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/txtUserLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <com.webmyne.modak.custome.TfEditText
                                        android:id="@+id/edtUserName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/edit_background"
                                        android:drawableLeft="@drawable/ic_image_user"
                                        android:drawablePadding="@dimen/padding_10"
                                        android:hint="@string/username"
                                        android:padding="@dimen/padding_10"
                                        android:singleLine="true"
                                        android:textColor="@android:color/black" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/txtEmailIdLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <com.webmyne.modak.custome.TfEditText
                                        android:id="@+id/edtEmail"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/edtUserName"
                                        android:layout_marginTop="@dimen/registrer_edit_margin_top"
                                        android:background="@color/edit_background"
                                        android:drawableLeft="@drawable/ic_image_email"
                                        android:drawablePadding="@dimen/padding_10"
                                        android:hint="@string/e_mail"
                                        android:inputType="textEmailAddress"
                                        android:padding="@dimen/padding_10"
                                        android:singleLine="true"
                                        android:textColor="@android:color/black" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/txtMobileLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <com.webmyne.modak.custome.TfEditText
                                        android:id="@+id/edtMobile"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/edtEmail"
                                        android:layout_marginTop="@dimen/registrer_edit_margin_top"
                                        android:background="@color/edit_background"
                                        android:drawableStart="@drawable/ic_image_phone_lock"
                                        android:drawablePadding="@dimen/padding_10"
                                        android:hint="@string/mobile"
                                        android:inputType="number"
                                        android:maxLength="10"
                                        android:padding="@dimen/padding_10"
                                        android:singleLine="true"
                                        android:textColor="@android:color/black" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/txtPassLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:passwordToggleEnabled="true">

                                <com.webmyne.modak.custome.TfEditText
                                        android:id="@+id/edtPass"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/edtMobile"
                                        android:layout_marginTop="@dimen/registrer_edit_margin_top"
                                        android:background="@color/edit_background"
                                        android:drawableStart="@drawable/ic_image_open_pass_lock"
                                        android:drawablePadding="@dimen/padding_10"
                                        android:ems="10"
                                        android:hint="@string/password"
                                        android:padding="@dimen/padding_10"
                                        android:password="true"
                                        android:singleLine="true"
                                        android:textColor="@android:color/black" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                    android:id="@+id/txtCnfPassLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:passwordToggleEnabled="true">

                                <com.webmyne.modak.custome.TfEditText
                                        android:id="@+id/edtCnfPass"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/edtPass"
                                        android:layout_marginTop="@dimen/registrer_edit_margin_top"
                                        android:background="@color/edit_background"
                                        android:drawableStart="@drawable/ic_image_lock"
                                        android:drawablePadding="@dimen/padding_10"
                                        android:hint="@string/confirm_password"
                                        android:padding="@dimen/padding_10"
                                        android:password="true"
                                        android:singleLine="true"
                                        android:textColor="@android:color/black" />
                            </android.support.design.widget.TextInputLayout>

                            <CheckBox
                                    android:id="@+id/chkIos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:text="@string/terms_and_condition" />

                            <com.webmyne.modak.custome.TfTextView
                                    android:id="@+id/textRegister"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/edtCnfPass"
                                    android:layout_marginTop="@dimen/registrer_edit_margin_top"
                                    android:background="@color/colorsplacebackground"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_10"
                                    android:text="Register"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />

                        </LinearLayout>

                        <com.webmyne.modak.custome.TfTextView
                                android:id="@+id/txtAlreayAMemeber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="30dp"
                                android:text="@string/already_a_member"
                                android:textColor="@android:color/black"
                                android:textStyle="italic" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
