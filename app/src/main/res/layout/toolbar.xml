<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme"
        android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorsplacebackground">

        <ImageView
                android:id="@+id/imgBackActivity"
                android:layout_width="@dimen/width_24"
                android:layout_height="@dimen/width_24"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_back_nevi" />

        <com.webmyne.modak.custome.TfTextView
                android:id="@+id/txtToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />
    </android.support.v7.widget.Toolbar>

</LinearLayout>
