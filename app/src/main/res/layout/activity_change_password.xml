<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgapp"
        android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.webmyne.modak.custome.TfTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_top_10"
                        android:gravity="center"
                        android:padding="@dimen/padding_15"
                        android:text="Min Length 5 And Max 32 Character"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14" />

                <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_10">

                        <com.webmyne.modak.custome.TfTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_top_10"
                                android:text="@string/current_password"
                                android:textColor="@color/colorsplacebackground" />

                        <com.webmyne.modak.custome.TfEditText
                                android:id="@+id/edtCurrentPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/black"
                                android:hint="@string/enter_current_password"
                                android:paddingBottom="@dimen/padding_bottom_20"
                                android:password="true"
                                android:singleLine="true"
                                android:textColor="@color/black" />

                        <com.webmyne.modak.custome.TfTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_top_10"
                                android:text="@string/new_password"
                                android:textColor="@color/colorsplacebackground" />

                        <com.webmyne.modak.custome.TfEditText
                                android:id="@+id/edtNewPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/black"
                                android:hint="@string/enter_new_password"
                                android:paddingBottom="@dimen/padding_bottom_20"
                                android:password="true"
                                android:singleLine="true"
                                android:textColor="@color/black" />

                        <com.webmyne.modak.custome.TfTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_top_10"
                                android:text="@string/confirm_password"
                                android:textColor="@color/colorsplacebackground" />

                        <com.webmyne.modak.custome.TfEditText
                                android:id="@+id/edtNewCnfPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/padding_bottom_20"
                                android:backgroundTint="@color/black"
                                android:hint="@string/enter_confirm_password"
                                android:paddingBottom="@dimen/padding_bottom_20"
                                android:password="true"
                                android:singleLine="true"
                                android:textColor="@color/black" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <com.webmyne.modak.custome.TfTextView
                android:id="@+id/txtChangePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/signupbutton"
                android:gravity="center"
                android:paddingTop="@dimen/paddint_top_10"
                android:paddingBottom="@dimen/padding_bottom_10"
                android:text="Change Password"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_18" />
    </RelativeLayout>


</LinearLayout>
