<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/margin_20"
        android:layout_gravity="center"
        android:background="@drawable/dialgog_background"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

       <!-- <RatingBar
                android:id="@+id/addRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleX="0.8"
                android:scaleY="0.8" />-->
        <com.hsalf.smilerating.SmileRating
                android:id="@+id/addRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:angryColor="#f29a68"
                app:drawingColor="#353431"
                app:normalColor="#f2dd68"
                app:isIndicator="false"
                app:showLine="false"
                app:placeHolderBackgroundColor="#e6e8ed"
                app:placeHolderSmileColor="#ffffff"
                app:textNonSelectionColor="#AEB3B5"
                app:textSelectionColor="#000000" />

        <com.webmyne.modak.custome.TfEditText
                android:id="@+id/edtReviewDesc"
                android:maxLines="3"
                android:maxLength="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addRating"
                android:hint="Please Give Rating" />

        <com.webmyne.modak.custome.TfTextView
                android:id="@+id/btnAddRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtReviewDesc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/colorsplacebackground"
                android:padding="@dimen/padding_10"
                android:text="Add Reviews"
                android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>

