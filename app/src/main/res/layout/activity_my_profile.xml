<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgapp"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_200">

                <ImageView
                    android:id="@+id/imgUserImage_MyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llProfileLoction"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:padding="@dimen/pading_20">

                        <com.webmyne.modak.custome.TfTextView
                            android:id="@+id/txtUserName_MyProffile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/larun_taylor"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_18" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_5"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgDirection"
                                android:layout_width="@dimen/icon_width_16"
                                android:layout_height="@dimen/icon_height_16"
                                android:layout_marginRight="@dimen/margin_right_10"
                                android:src="@drawable/icon_direction" />

                            <com.webmyne.modak.custome.TfTextView
                                android:id="@+id/txtAddress_MyProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/imgDirection"
                                android:text="@string/navrangpura"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_14" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.2"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/width_32"
                            android:layout_height="@dimen/height_32"
                            android:scaleType="centerCrop"
                            android:src="@drawable/btn_fb" />

                        <ImageView
                            android:id="@+id/imgGooglePlus"
                            android:layout_width="@dimen/width_32"
                            android:layout_height="@dimen/height_32"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/btn_gplus" />

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_10">

                        <ImageView
                            android:id="@+id/imgFavoriteIcon"
                            android:layout_width="@dimen/widht_24"
                            android:layout_height="@dimen/widht_24"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="@dimen/margin_right_10"
                            android:src="@drawable/icon_like" />

                        <com.webmyne.modak.custome.TfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imgFavoriteIcon"
                            android:text="@string/favorites"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16" />

                        <com.webmyne.modak.custome.TfTextView
                            android:id="@+id/txtFavoriteitemCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_16" />

                    </RelativeLayout>

                    <!-- <android.support.v7.widget.RecyclerView
                             android:id="@+id/rvFavorite_MyProfile"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">

                     </android.support.v7.widget.RecyclerView>-->
                    <LinearLayout
                        android:id="@+id/llFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.webmyne.modak.custome.TfTextView
                android:id="@+id/txtMyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/padding_10"
                android:text="@string/my_address"
                android:textColor="@color/colorsplacebackground"
                android:textSize="@dimen/text_size_16" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_right_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_10">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvMyProfileAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.webmyne.modak.custome.TfTextView
                android:id="@+id/txtChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/padding_10"
                android:text="@string/change_password"
                android:textColor="@color/colorsplacebackground"
                android:textSize="@dimen/text_size_16" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10">

                    <com.webmyne.modak.custome.TfTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textColor="@color/black" />

                    <com.webmyne.modak.custome.TfTextView
                        android:id="@+id/txtHidePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>