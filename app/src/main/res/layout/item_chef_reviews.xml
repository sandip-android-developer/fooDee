<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_3"
        android:orientation="vertical">

    <LinearLayout
            android:background="@color/white"
           android:id="@+id/llReviewlatout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/imgUserImage_ChefReview"
                    android:layout_width="@dimen/chef_image_width"
                    android:layout_height="@dimen/chef_image_height"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10"
                    android:src="@drawable/ic_user_icon"
                />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <com.webmyne.modak.custome.TfTextView
                            android:id="@+id/txtUserName_ChefReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/chef_dazzy_petet"
                            android:textColor="@color/colorsplacebackground"
                            android:textSize="@dimen/text_size_18" />

                    <RatingBar
                            android:id="@+id/Userrating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_20"
                            android:isIndicator="true"
                            android:numStars="5"
                            />

                </LinearLayout>

                <com.webmyne.modak.custome.TfTextView
                        android:id="@+id/txtReviewDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Wow,Its looks super tasty,i am gonna  try it!"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


            </LinearLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightGray1" />
    </LinearLayout>

</LinearLayout>
