<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgapp"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.webmyne.modak.custome.TfTextView
            android:id="@+id/txtMMoney"
          android:layout_centerInParent="true"
            android:text="Modak Money"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.webmyne.modak.custome.TfTextView
            android:layout_marginTop="@dimen/margin_10"
            android:layout_below="@+id/txtMMoney"
            android:id="@+id/txtodakMoney"
            android:layout_centerInParent="true"
            android:text="200"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/colorsplacebackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>






</LinearLayout>
